// Solidity program
// to store
// Employee Details
pragma solidity ^0.5.0;

// Creating a Smart Contract
contract StructDemo{

// Structure of employee
struct product{
	// State variables
	uint bid;
	string productname;
	string  location;
	string timestamp;
	string ins;
	string details;
	uint mid;
}

product []emps;


// Function to add
// products details
function addEmployee(uint bid, string memory p,string memory l,string memory t,string memory ins,string memory d,uint mid) public{
	product memory e =product(bid, p,l, t,ins,d,mid);
	emps.push(e);
}


// Function to get details of prodcut
function getEmployee(uint bid) public view returns(string memory, string memory, string memory,string memory,string memory,uint){
    uint i;
	for(i=0;i<emps.length;i++)
	{
		product memory e =emps[i];

		// Looks for a matching
		// employee id
		if(e.bid==bid)
		{
				return(e.productname,e.timestamp,e.location,e.ins,e.details,e.mid);
		}
	}
	return("0","0","0","0","0",0);
}

}
